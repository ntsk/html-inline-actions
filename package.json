{
  "name": "html-inline-actions",
  "version": "1.0.0",
  "description": "GitHub Action to inline CSS and JS into HTML files",
  "type": "module",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "bundle": "rollup -c",
    "format": "prettier --write .",
    "lint": "eslint src/**/*.ts",
    "test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest",
    "all": "npm run format && npm run lint && npm run test && npm run bundle",
    "package": "npm run bundle && npm pack"
  },
  "keywords": [
    "github-actions",
    "html",
    "inline",
    "css",
    "js"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "rollup": "^4.52.3",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "@actions/core": "^1.11.1"
  }
}
